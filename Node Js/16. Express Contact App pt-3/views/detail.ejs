<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>

            <% if (!contacts) { %>
                <div class="alert alert-danger" role="alert">
                    Data Contact Tidak Ditemukan <br>
                    <a href="/contact" class="alert-link">&laquo; Kembali Ke Daftar Contact</a>
                </div>
                <% }else { %>
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=contacts.nama %>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary">
                                <%=contacts.nohp %>
                            </h6>
                            <p class="card-text">
                                <%=contacts.email %>
                            </p>

                            <a href="/contact/delete/<%=contacts.nama%>" class="btn btn-danger badge"
                                onclick="return confirm('yakin MasPur?');">Hapus</a>

                            <a href="/contact/edit/<%=contacts.nama%>" class="btn btn-primary badge">Edit</a>

                            <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali ke daftar contact</a>

                        </div>
                    </div>

                    <% } %>
        </div>
    </div>
</div>