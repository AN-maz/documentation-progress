<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>

      <% if (contacts.length ===0) { %>
        <div class="alert alert-danger" role="alert">
          Data Contact Masih Kosong MasPur!
        </div>
        <% }%>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nama</th>
                <th scope="col">No HP</th>
                <th scope="col">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% i=1 %>
                <% contacts.forEach(contact=> { %>

                  <tr>
                    <th scope="row">
                      <%= i %>
                    </th>
                    <td>
                      <%= contact.nama %>
                    </td>
                    <td>
                      <%= contact.noHp %>
                    </td>
                    <td>
                      <a href="/contact/<%=contact.nama %>" class="btn btn-success badge rounded-pill">
                        <i class="bi bi-info-circle"></i> Detail
                      </a>
                    </td>
                  </tr>

                  <% i++ %>

                    <% }) %>
            </tbody>
          </table>
    </div>
  </div>
</div>